<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Admin Dashboard</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

  <!-- FontAwesome -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" rel="stylesheet" />

  <style>
    body {
      margin: 0;
      font-family: Arial, sans-serif;
    }

    /* Sidebar styles */
    .sidebar {
      position: fixed;
      top: 56px; /* same height as navbar */
      left: 0;
      width: 250px;
      height: calc(100vh - 56px);
      background-color: #343a40;
      color: #ddd;
      padding: 15px;
      overflow-y: auto;
      transition: transform 0.3s ease;
      transform: translateX(-100%);
      z-index: 1050; /* above main content but below navbar */
    }

    .sidebar.active {
      transform: translateX(0);
    }

    .sidebar .menu-item {
      margin-bottom: 10px;
    }

    .sidebar a {
      display: flex;
      align-items: center;
      color: inherit;
      text-decoration: none;
      padding: 10px;
      border-radius: 5px;
    }

    .sidebar a i {
      margin-right: 10px;
    }

    .sidebar a:hover {
      background-color: #007bff;
      color: black;
    }

    /* Dropdown */
    .menu-item.dropdown {
      position: relative;
    }

    .dropdown-menu-custom {
      display: none;
      flex-direction: column;
      background-color: #343a40;
      padding-left: 20px;
    }

    .menu-item.dropdown:hover .dropdown-menu-custom {
      display: flex;
    }

    /* Toggle button */
    .toggle-btn {
      font-size: 20px;
      cursor: pointer;
      color: white;
      user-select: none;
      margin-left: 10px;
    }

    /* Show sidebar and hide toggle on desktop */
    @media (min-width: 769px) {
      .sidebar {
        transform: translateX(0);
      }

      .toggle-btn {
        display: none;
      }
    }
  </style>
</head>

<body>
  <!-- Navbar -->
  <nav class="navbar navbar-dark bg-dark fixed-top">
    <div class="container-fluid">
      <a href="/admin/adminDash" class="navbar-brand">Admin Panel</a>
      <span class="toggle-btn" id="toggleBtn"><i class="fas fa-bars"></i></span>
    </div>
  </nav>

  <!-- Sidebar -->
  <div class="sidebar" id="sidebar">
    <div class="menu-item">
      <a href="/admin/change-password">
        <i class="fas fa-lock"></i> Change Password
      </a>
    </div>

    <div class="menu-item">
      <a href="/admin/manage-user">
        <i class="fas fa-user"></i> User Management
      </a>
    </div>

    <div class="menu-item dropdown">
      <a href="#"><i class="fas fa-blog"></i> Add Pages Cover Image</a>
      <div class="dropdown-menu-custom">
        <a href="/admin/add-cover">Add Cover Image</a>
        <a href="/admin/manage-cover">Manage Cover Image</a>
      </div>
    </div>

    

    <div class="menu-item">
      <a href="/admin/manage-schedule">
        <i class="fas fa-calendar"></i> Schedule Management
      </a>
    </div>

    <div class="menu-item dropdown">
      <a href="#"><i class="fas fa-blog"></i> Reviews</a>
      <div class="dropdown-menu-custom">
        <a href="/admin/add-review">Add Reviews</a>
        <a href="/admin/manage-review">Manage Reviews</a>
      </div>
    </div>


    <div class="menu-item">
      <a href="/admin/signout">
        <i class="fas fa-sign-out-alt"></i> Sign-Out
      </a>
    </div>
  </div>


  <script>
    const toggleBtn = document.getElementById("toggleBtn");
    const sidebar = document.getElementById("sidebar");

    toggleBtn.addEventListener("click", () => {
      sidebar.classList.toggle("active");
    });

    // Optional: close sidebar if click outside on mobile
    document.addEventListener("click", (e) => {
      if (
        !sidebar.contains(e.target) &&
        !toggleBtn.contains(e.target) &&
        window.innerWidth < 769 &&
        sidebar.classList.contains("active")
      ) {
        sidebar.classList.remove("active");
      }
    });
  </script>

  <!-- Bootstrap JS Bundle -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
